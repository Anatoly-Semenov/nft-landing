.ui-checkbox
	position relative
	color $color-text
	opacity .6
	transition opacity $transition

	&.ant-checkbox-wrapper-checked
		opacity 1

	&__block
		display flex
		align-items center
		cursor pointer


	& .ant-checkbox:hover .ant-checkbox-inner
		border-color $color-text

	& .ant-checkbox-checked:after
		display none

	& .ant-checkbox-checked:after
		border-color $color-text

	& .ant-checkbox-checked, & .ant-checkbox-inner, &.ant-checkbox-input:focus+.ant-checkbox-inner, &.ant-checkbox-wrapper:hover .ant-checkbox-inner
		background-color transparent
		border-color $color-text !important // Перекрытие Ant-design стиля

	&.ant-checkbox,	&._switch.ant-switch
		margin-right 16px

		&-checked
			background-color $color-ui

		& [ant-click-animating-without-extra-node="true"]::after, & .ant-click-animating-node
			box-shadow 0 0 0 0 $color-ui

		&-checked::after
			border 1px solid $color-ui
