.ui-connect
	display flex
	justify-content center
	align-items center
	border-radius 30px
	padding 7px 15px
	background $color-ui
	box-shadow 0 12px 24px rgba(0, 0, 0, 0.06)
	color $color-text
	font-size 12px
	height 44px
	min-width 150px
	transition-property box-shadow, background, color
	transition-duration 0.4s
	transition-timing-function ease
	transition-delay 0s

	&:hover
		background $gradient-ui
		box-shadow $box-shadow-ui

	&:disabled
		opacity 1
		cursor default

	& .ui-avatar
		width 30px
		height 30px
		margin-right 10px

	&._loading
		loading()
		border-radius 30px

	&._loading &__label,
	&._loading &__loading
		loading()
		box-shadow 0 12px 24px #00000080

	&._loading &__loading
		height 30px
		width 30px
		margin-right $padding-small
		border-radius $border-radius-circle
