.ui-textarea
	& .ant-input
		border $border
		border-radius $border-radius
		padding 14px $padding
		background-color $color-background
		color $color-text
		custom-scrollbar()

		&:placeholdeer
			color $color-border

		&:focus
			box-shadow none

	& textarea
		min-height 140px

	&__title
		color $color-text
		font-size 20px
		font-weight 600
