.nft
	display flex
	flex-direction column

	&__title
		font-size 42px
		font-weight 900

	&__title
		font-size 20px
		font-weight 600
		color $color-highlight

	&__items
		display flex
		flex-wrap wrap
		justify-content center
		row-gap 50px
		column-gap $padding-big
		margin-top 50px

	&__rewards
		display flex
		flex-direction column
		align-items flex-start
		margin-top 80px

		&-title
			font-size 24px
			font-weight 600

		&-list
			width 100%
			display flex
			flex-wrap wrap
			justify-content space-between
			row-gap 50px
			column-gap $padding-big
			margin-top $padding
