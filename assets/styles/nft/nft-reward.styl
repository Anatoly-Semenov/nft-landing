.nft__reward
	display flex
	flex-direction column
	justify-content flex-start
	align-items center
	position relative
	width 380px
	height 400px
	border-radius $border-radius
	border $border
	background radial-gradient(73.68% 65.51% at 50% 85.86%, $color-background-dark 0%, #232754 100%)

	&-img
		width 100%
		height 200px
		background-size cover
		border-top-left-radius $border-radius
		border-top-right-radius $border-radius
		filter brightness(0.7)

	& .ui-tag
		position absolute
		top 20px
		left 47%

	&-text
		display flex
		flex-direction column
		justify-content center
		align-items center
		width 100%
		padding $padding $padding-big

	&-description, &-title
		text-align center

	&-description
		font-size 18px
		color $color-text-light
		margin-bottom 4px

	&-title
		font-size 20px
		font-weight 600
		color $color-text

	& .ui-button
		margin-top auto

	&-timer
		display flex
		justify-content center
		align-items center
		color $color-link
		margin-top 15px
		margin-bottom 25px
		font-size 14px

		& svg
			margin-right 8px
			margin-bottom 1px

		& path
			fill $color-link

	&._loading
		opacity .7
